{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["../node_modules/@types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist", "*.test.ts"]
}
